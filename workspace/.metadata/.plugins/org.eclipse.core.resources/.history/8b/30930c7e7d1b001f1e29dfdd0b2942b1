package com.CPT.Servlet;

import java.io.IOException;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.CPT.Dao.GioHangDao;
import com.CPT.Dao.GioHangDaoImpl;
import com.CPT.Entities.GioHang;
import com.CPT.Entities.NguoiDung;

public class GioHangServlet extends HttpServlet {

	private static final long serialVersionUID = 1L;

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		HttpSession session = req.getSession();
		NguoiDung nd = (NguoiDung)session.getAttribute("acc");
		if(nd == null) {
			resp.sendRedirect("login");
		}
		int idnguoidung = nd.getId();
		GioHangDao dao = new GioHangDaoImpl();
		List<GioHang> list = dao.getCartByAccountID(idnguoidung);
		req.setAttribute("gh", list);
		req.getRequestDispatcher("index.jsp").forward(req, resp);
		
	}

}
