package com.CPT.Servlet;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.CPT.Dao.GiohangDao;
import com.CPT.Dao.GiohangImpl;

/**
 * Servlet implementation class GhServlet
 */
@WebServlet("/GhServlet")
public class GhServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public GhServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		GiohangDao ghDao = new GiohangImpl();
		String action=request.getParameter("action");
		if(action==null) {
			request.setAttribute("gh", ghDao.getAll());
			request.getRequestDispatcher("Giohang.jsp").forward(request, response);
		}else if(action.equals("sanpham")) {
			int ghid = Integer.parseInt(request.getParameter("ghid"));
			request.setAttribute("lap", ghDao.getById(ghid));
			request.getRequestDispatcher("sanpham.jsp").forward(request, response);
		}
		else if(action.equals("delete"))
			{
			int ghid = Integer.parseInt(request.getParameter("ghid"));
				if(ghDao.delete(ghid)) 
					request.setAttribute("msg", "Xóa thành công");
					request.setAttribute("gh", ghDao.getAll());
					request.getRequestDispatcher("index.jsp").forward(request, response);
			
			}else {
				
				request.setAttribute("gh", ghDao.getAll());
				request.getRequestDispatcher("index.jsp").forward(request, response);
				}
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
