package com.CPT.Admin.Servlet;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;
import javax.servlet.http.Part;

import com.CPT.DB.DBConnect;
import com.CPT.Dao.SanPhamDaoImpl;
import com.CPT.Entities.SanPham;

public class ThemSanPham extends HttpServlet {

	private static final long serialVersionUID = 1L;

	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		try {
			String iddanhmuc = req.getParameter("names");
			String tensanpham = req.getParameter("giacu");
			String giacu = req.getParameter("giamoi");
			String giamoi = req.getParameter("hdh");
			String mota = req.getParameter("cpu");
			Part pt = req.getPart("ha");
			String ngaytao = req.getParameter("mh");
			String ngaysua = req.getParameter("ram");
			
			
			String filename = pt.getSubmittedFileName();

			SanPham s = new SanPham();

			SanPhamDaoImpl dao = new SanPhamDaoImpl(DBConnect.getConnect());
			boolean f = dao.addSanPham(s);

			HttpSession session = req.getSession();

			if (f) {
				session.setAttribute("succMsg", "add-sp successfull");
				resp.sendRedirect("admin/add_sp.jsp");
			} else {
				session.setAttribute("faileMsg", "Faileding!");
				resp.sendRedirect("admin/add_sp.jsp");
			}

		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}
