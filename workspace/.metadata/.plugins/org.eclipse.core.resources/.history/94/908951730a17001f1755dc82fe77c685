package com.CPT.Admin.Servlet;

import java.io.IOException;
import java.sql.Connection;
import java.sql.SQLException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.CPT.DB.DBConnect;
import com.CPT.Dao.NguoiDungDao;
import com.CPT.Dao.NguoiDungDaoImpl;
import com.CPT.Entities.NguoiDung;

@WebServlet("/searchUser")
public class SearchNguoiDung extends HttpServlet {

	private static final long serialVersionUID = 1L;

	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		resp.setContentType("text/html");
		resp.setCharacterEncoding("UTF-8");
		req.setCharacterEncoding("UTF-8");
		
		NguoiDungDaoImpl ndDao = new NguoiDungDaoImpl(DBConnect.getConnect());
		String name = req.getParameter("txtname");
		List<NguoiDung> nds = ndDao.searchByName(name);
		req.setAttribute("nxx", nds);
		req.getRequestDispatcher("admin/quanlyTaiKhoan.jsp").forward(req, resp);
	}

}
