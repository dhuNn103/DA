package com.CPT.Admin.Servlet;

import java.io.IOException;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.CPT.DB.DBConnect;
import com.CPT.Dao.NguoiDungDaoImpl;
import com.CPT.Entities.NguoiDung;

public class SearchUsser extends HttpServlet{

	private static final long serialVersionUID = 1L;

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		NguoiDungDaoImpl ndDao = new NguoiDungDaoImpl(DBConnect.getConnect());
		String search = req.getParameter("");		
		List<NguoiDung> list = ndDao.searchByName(search);
		req.setAttribute("", "");
		req.setAttribute("", list);
		req.getRequestDispatcher("").forward(req, resp);
	}

}
