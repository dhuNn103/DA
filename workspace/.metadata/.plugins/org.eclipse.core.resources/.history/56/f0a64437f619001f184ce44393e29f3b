package com.CPT.Admin.Servlet;

import java.io.IOException;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.CPT.DB.DBConnect;
import com.CPT.Dao.SanPhamDaoImpl;
import com.CPT.Entities.SanPham;

@WebServlet("/SearchSanPham")
public class SearchSanPham extends HttpServlet{

	private static final long serialVersionUID = 1L;

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String names = req.getParameter("name");
		SanPhamDaoImpl dao = new SanPhamDaoImpl(DBConnect.getConnect());
		List<SanPham> SP = dao.search(names);
		req.setAttribute("", SP);
		resp.sendRedirect("admin/SearchSanPham.jsp");
	}
	
}
