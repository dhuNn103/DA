package com.CPT.Admin.Servlet;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;

import com.CPT.Dao.NguoiDungDao;
import com.CPT.Dao.NguoiDungDaoImpl;

public class SearchNguoiDung extends HttpServlet {

	private static final long serialVersionUID = 1L;
	private NguoiDungDao ndDao;

	@Override
	public void init() throws ServletException {
		ndDao = new NguoiDungDaoImpl(null);
	}

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String name = req.getParameter("txtsearch");
		List<NguoiDung> nds = ndDao.searchByName(name);
		req.setAttribute("nxx", nds);
		RequestDispatcher rs = req.getRequestDispatcher("quanlyTaiKhoan.jsp");
		rs.forward(req, resp);
	}

}
