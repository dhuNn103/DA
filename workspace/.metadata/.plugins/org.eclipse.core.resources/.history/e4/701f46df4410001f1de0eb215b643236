	<header
		class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
		<div class="ps-5">
			<a class="navbar-brand col-md-3 col-lg-2 me-0 ps-5 fs-4" href="#">Trang
				quản trị</a>
		</div>
		<div class="navbar-nav">
				<a class="nav-link px-3 text-white pe-5" href="index.jsp" onclick="logout()">Đăng xuất</a>	
		</div>
	</header>
	<script>
    function logout() {
        // Gửi yêu cầu đăng xuất bằng JavaScript
        var xhr = new XMLHttpRequest();
        xhr.open("GET", "logout", true); // Đặt endpoint xử lý việc đăng xuất ở đây
        xhr.onreadystatechange = function() {
            if (xhr.readyState === 4 && xhr.status === 200) {
                // Chuyển hướng người dùng sau khi đăng xuất thành công
                window.location.href = "login.jsp"; // Đặt URL của trang đăng nhập ở đây
            }
        };
        xhr.send();
    }
</script>
